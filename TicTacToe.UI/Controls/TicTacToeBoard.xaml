<UserControl x:Class="TicTacToe.UI.Controls.TicTacToeBoard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TicTacToe.UI.Controls"
             mc:Ignorable="d" 
             x:Name="Board"
             d:DesignHeight="512" d:DesignWidth="{Binding ElementName=Board, Path=Height}">
    
    <Grid x:Name="grdContent" Width="{Binding ActualHeight, ElementName=grdContent}"/>
</UserControl>
