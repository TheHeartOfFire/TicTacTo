<UserControl x:Class="TicTacToe.UI.Controls.TicTacToeTile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TicTacToe.UI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
    <Button x:Name="btnControl" Style="{DynamicResource TicTacToeButton}" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch" Background="#01FFFFFF" BorderBrush="{x:Null}" Foreground="{x:Null}" Height="{Binding ActualHeight, ElementName=btnControl, Mode=OneWay}" Click="btnControl_Click">
        <Image x:Name="imgDisplay" IsHitTestVisible="False"/>
    </Button>

</UserControl>
